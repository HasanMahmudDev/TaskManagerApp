@model TaskStage
@{
    ViewBag.Title = "Delete Task Stage";
}

<div class="container mt-4">
    <h2>Are you sure you want to delete this Task Stage?</h2>

    <div class="mb-3">
        <strong>Task Stage Name:</strong> @Model.TaskStageName
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="TaskStageId" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
