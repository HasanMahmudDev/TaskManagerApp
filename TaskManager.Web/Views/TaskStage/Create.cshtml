@model TaskStage
@{
    ViewBag.Title = "Create Task Stage";
}

<div class="container-fluid">
    <h2>Create Task Stage</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="TaskStageName">Task Stage Name</label>
            <input asp-for="TaskStageName" class="form-control" />
            <span asp-validation-for="TaskStageName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
