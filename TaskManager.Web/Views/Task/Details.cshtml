@model TaskManager.Domain.Entities.TaskItem

<h2>Task Details</h2>
<div class="card">
    <div class="card-body">
        <h5>@Model.Title</h5>
        <p>@Model.Description</p>
        <p><strong>Assigned To:</strong> @Model.AssignedTo</p>
        <p><strong>Company:</strong> @Model.CompanyName</p>
        <p><strong>Priority:</strong> @Model.Priority</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Date:</strong> @Model.CreateDate.ToShortDateString()</p>
    </div>
</div>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
