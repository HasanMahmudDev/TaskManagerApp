@model TaskManager.Domain.Entities.User

@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

@if (Model == null)
{
    <div class="alert alert-danger">User not found.</div>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>

        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Role</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>

        @if (Model.EmployeeProfile != null)
        {
            <dt class="col-sm-2">Employee Name</dt>
            <dd class="col-sm-10">@Model.EmployeeProfile.FullName</dd>
        }
    </dl>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">Edit</a>
}
