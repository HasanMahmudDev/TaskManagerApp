@model IEnumerable<Project>

@{
    ViewData["Title"] = "Project List";
}

<h2>Projects</h2>
<a asp-action="Create" class="btn btn-primary">+ Create New Project</a>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Description</th>
            <th>Start</th>
            <th>End</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProjectName</td>
                <td>@item.Description</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProjectId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ProjectId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
